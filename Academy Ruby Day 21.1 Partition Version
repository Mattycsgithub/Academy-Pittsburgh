class StringCalculator
    def calculate the_string
        # find the parts
        math_array = the_string.partition("+")
        left_number = math_array[0].to_i
        operator = math_array[1]
        right_number = math_array[2].to_i

        # do the math
        answer = left_number + right_number

        # return the answer
        return answer
    end
end
