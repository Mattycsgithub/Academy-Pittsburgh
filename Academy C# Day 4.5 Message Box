// [Show] the user a _menu_
            // [Ask] the user for their _choice_
            //  If they said s, [save] their _message_
            //  if they said r, [ask] for a _message id_ then [show] that _message_
            //  if they said q, [exit] the program
            // [Show] the menu again ([go back] to the top)

            string choice = "go go go";
            while(choice != "q")
            {
                Console.WriteLine("Do you want to s)ave a message, r)etreive a message, or q)uit.");
                choice = Console.ReadLine();

                if (choice == "s")
                {
                    // I should save a message here
                    Console.WriteLine("I should be saving!");
                }
                else if (choice == "r")
                {
                    Console.WriteLine("Ask for a message id then show that message");
                }
                else if (choice == "q")
                {
                    Console.WriteLine("I should quit here.");
                    // return; // this works
                }
                else
                {
                    Console.WriteLine("I don't remember putting that on the menu.");
                }
            }
