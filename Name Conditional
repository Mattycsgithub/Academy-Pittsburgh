using System;

namespace Variables
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("What is your name?");
            string name;
            name = Console.ReadLine();
            Console.WriteLine("Nice to meet you, " + name);

            Console.WriteLine("What is your age?");
            string age = Console.ReadLine();
            Console.WriteLine("You are " + age + " years old");

            Console.WriteLine("You will be " + (Convert.ToInt32(age) + 5) + " in 5 years");

            int ageAsANumber = Convert.ToInt32(age);
            Console.WriteLine("You will be " + (ageAsANumber + 5) + " in 5 years");

            int ageInFiveYears = ageAsANumber + 5;
            Console.WriteLine("You will be " + ageInFiveYears + " in 5 years");

            int ageAgain = Convert.ToInt32(Console.ReadLine());

        }
    }
}
