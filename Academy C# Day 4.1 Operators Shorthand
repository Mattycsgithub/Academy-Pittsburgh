using System;
using System.Security.Cryptography.X509Certificates;

namespace Variables
{
    class Program
    {
        static void Main(string[] args)
        {

            // If you ever have number = number + 1;
            // this is the same as number += 1;
            // -=, *=, /=

            // was string name = "Hello";
            string name;
            name = "Hello";
            // was name += " World";
            name = name + " World";

            int i = 0;
            // i++;
            i = i + 1;

            // ++i;
            i = i + 1;

            Console.WriteLine(i);

            // Console.WriteLine(i++);
            Console.WriteLine(i);
            i = i + 1;

            // Console.WriteLine(++i);
            i = i + 1;
            Console.WriteLine(i);
        }
    }
}
